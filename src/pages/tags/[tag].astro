---
import { getCollection } from "astro:content";
import Layout from "../../layouts/Layout.astro";
import Header from "../../components/Header.astro";
import ContentMenu from "../../components/ContentMenu.astro";

export async function getStaticPaths() {
  const allGuides = await getCollection("guides");
  const uniqueTags = [
    ...new Set(allGuides.map((guide) => guide.data.tags).flat()),
  ];
  return uniqueTags.map((tag) => {
    const filteredPosts = allGuides.filter((guide) =>
        tag && guide.data.tags && Array.isArray(guide.data.tags) && guide.data.tags.includes(tag)
    );
    return {
      params: { tag },
      props: { guides: filteredPosts },
    };
  });
}

const { tag } = Astro.params;
const { guides } = Astro.props;
---

<Layout title={(tag as string).toString()}>
  <div class="container px-6 m-auto">
    <Header />
    <div class="grid grid-cols-4 gap-6 md:grid-cols-8 lg:grid-cols-12">
      <div class="col-span-4 lg:col-span-3"><ContentMenu /></div>
      <div class="col-span-4 lg:col-span-6">
        <main>
          <section>
            <div
              class="items-center px-8 py-12 mx-auto max-w-7xl lg:px-16 md:px-12 lg:py-24"
            >
              <div class="max-w-xl mx-auto text-center lg:p-10">
                <div>
                  <p class="max-w-xl mx-auto mt-4 text-lg tracking-tight text-zinc-600">Posts tagged with {tag}</p>
                  <ul>
                    {
                      guides.map((post) => (
                        <li>
                          <a
                            href={post.slug}
                            class="inline-flex items-center text-sm transition-colors rounded text-zinc-700 hover:text-zinc-500 hover:bg-zinc-50 focus:bg-zinc-50 aria-[current=page]:text-zinc-500 aria-[current=page]:bg-zinc-50"
                          >
                            <span class="ml-4">{post.data.title}</span>
                          </a>
                        </li>
                      ))
                    }
                  </ul>
                </div>
              </div>
            </div>
          </section>
        </main>
      </div>
      <div class="col-span-4 lg:col-span-3"></div>
    </div>
  </div>
</Layout>
