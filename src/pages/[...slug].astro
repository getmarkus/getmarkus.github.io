---
import { getCollection } from "astro:content";
import Layout from "../layouts/Layout.astro";
import ContentMenu from "../components/ContentMenu.astro";
import Prose from "../components/Prose.astro";
import Header from "../components/Header.astro";
import Footer from "../components/Footer.astro";

export async function getStaticPaths() {
  const guides = await getCollection("guides");
  return guides.map((entry) => ({
    params: { slug: entry.slug },
    props: { entry },
  }));
}

const { entry } = Astro.props;
const { Content } = await entry.render();
---

<Layout title={entry.data.title}>
  <div class="container px-6 m-auto">
    <Header />
    <div class="grid grid-cols-4 gap-6 md:grid-cols-8 lg:grid-cols-12">
      <div class="col-span-4 lg:col-span-3"><ContentMenu /></div>
      <div class="col-span-4 lg:col-span-6">
        <main>
          <Prose frontmatter={entry.data}>
            <Content />
          </Prose>
        </main>
      </div>
      <div class="col-span-4 lg:col-span-3"></div>
    </div>
    <Footer />
  </div>
</Layout>
